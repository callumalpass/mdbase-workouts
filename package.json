{
  "name": "mdbase-workouts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n fe,be -c cyan,magenta \"vite --host\" \"tsx watch server/index.ts\"",
    "dev:fe": "vite --host",
    "dev:be": "tsx watch server/index.ts",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "screenshots": "playwright test tests/mobile-screenshots.spec.ts --project=mobile",
    "seed": "tsx scripts/seed-exercises.ts",
    "start": "NODE_ENV=production tsx server/index.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.34",
    "@callumalpass/mdbase": "latest",
    "@hono/node-server": "^1.13.0",
    "hono": "^4.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
